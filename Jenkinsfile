Pipeline {
           agent any
                    stages {
                            stage('One'){
                                         steps  {
                                                  echo 'Hi , this is Arvind'
                                                  }
                                         }
                              stage('Two') {
                                            steps{
                                                   input('Do you want to proceed?')
                                                   }
                                              }
                                  stage('Three') {
                                                steps{
                                                       echo 'First Jenkins Pipeline'
                                                       }
                                                   }
                                  }
                                  
                }                  
                                  
                            
                                           
